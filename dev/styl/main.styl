// grid system
$mobile-first = false;
$max-width=    940px;
$breakpoints=  992px 768px 676px;
$desktopGutter = 30;
$colLeftWidth = (595 + $desktopGutter) * 100 / $max-width;
$colRightWidth =(282 + $desktopGutter) * 100 / $max-width;
$gutters=      unit($desktopGutter,'px') 26px 20px 50px;
$container = {
  ".container": {
    gutter: true
  }
  ".row": {
    nested: true
  }
}
$grid = {
  ".col3": {
    width: 1/3 null null 1,
    float: left null null none,
  },
  ".col2": {
    width: 1 null null 1/2,
    float: none null null left,
  },
  ".col12": {
    width: 1 null null null,
    float: none null null null
  },
  ".contentLeft": {
  width: unit($colLeftWidth,'%') null 1 null,
  float: left null null null
  },
  ".contentRightCol": {
    width: unit($colRightWidth,'%') null 1 null,
    float: right null null null
  },
  ".rightColItem": {
    width: 1 null 1/2 1,
    float: none left null none
  },
  ".copyright": {
    width: unit(40,"%") null unit(35,"%") 1,
    float: left null null none
  },
  ".payments": {
    width: unit(60,"%") null unit(65,"%") 1,
    float: right null null none
  }
}
