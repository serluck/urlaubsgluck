  background #fff url(../images/bg.svg) no-repeat;
}
  .header__logo {
    float:left;
    font: bold 20px $fontmont;
  }
  .header__login-block {
    float right
  }
    .header__login-block-login,
    .header__login-block-sign {
      float left
      padding 12px 19px
      font: bold 14px $fontmont;
      transition: all .5s
    }
    .header__login-block-login {
      border-radius 18px
      border 2px solid transparent
    }
    .header__login-block-sign {
      border 2px solid
      border-radius 18px
    }
      .header__login-block-login:hover,
      .header__login-block-sign:hover {
        background #fff;
        color:#000;
      }
       .header__login-block-login:active,
      .header__login-block-sign:active {
        background #DEDDDD;
        color:#131010;
      }
